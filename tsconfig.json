{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    //
    "types": ["node", "vite-plugin-pwa/info", "vite/client", "vite-plugin-pwa/client"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@i18n/*": ["src/i18n/*"],
      "@themes/*": ["src/themes/*"],
      "@type/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["./config/*"],
      "@lib/*": ["./lib/*"]
    }
  },
  "include": ["src", "lib"],
  "exclude": [
    "node_modules",
    "**/*.stories.tsx" // Exclude all .stories.tsx files
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
